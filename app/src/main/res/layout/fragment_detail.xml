<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/albumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앨범명"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/albumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[THE 시즌즈 VOLL.9]"
            app:layout_constraintStart_toEndOf="@id/albumTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"/>

    <TextView
            android:id="@+id/artistLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아티스트"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumTitle" />

    <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="민니"
            app:layout_constraintStart_toEndOf="@id/artistLabel"
            app:layout_constraintTop_toTopOf="@id/artistLabel"
            android:layout_marginStart="20dp"/>

    <TextView
            android:id="@+id/recordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발매사"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/artistLabel" />

    <TextView
            android:id="@+id/recordCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오엔터테인먼트"
            app:layout_constraintStart_toEndOf="@id/recordLabel"
            app:layout_constraintTop_toTopOf="@id/recordLabel"
            android:layout_marginStart="20dp"/>

    <TextView
            android:id="@+id/productionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기획사"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recordLabel" />

    <TextView
            android:id="@+id/productionCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국방송공사"
            app:layout_constraintStart_toEndOf="@id/productionLabel"
            app:layout_constraintTop_toTopOf="@id/productionLabel"
            android:layout_marginStart="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
